{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@services/*": ["./src/services/*"],
      "@router": ["./src/router.ts"],
      "@controller/*": ["./src/controller/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"]
}
